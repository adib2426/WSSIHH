<!DOCTYPE html>
<html lang="ms">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waktu Solat Interaktif - SGR03</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
        body { font-family: 'Poppins', sans-serif; background: #0f172a; color: white; }
        .glass { background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); }
        .active-solat { background: linear-gradient(135deg, #3b82f6, #2dd4bf); border: none; transform: scale(1.05); }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center p-4">

    <div class="max-w-md w-full">
        
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold mb-2">Waktu Solat</h1>
            <p id="zone-name" class="text-blue-400 font-medium">Memuatkan zon...</p>
            <p id="current-date" class="text-sm opacity-60"></p>
        </div>

        <div id="solat-list" class="space-y-3">
            <div class="glass p-6 rounded-2xl text-center">Sedang memuatkan data...</div>
        </div>

        <div class="mt-8 text-center text-xs opacity-40">
            Data dikuasai oleh api.waktusolat.app <br>
            Zon: SGR03 (Kuala Langat, Sepang)
        </div>
    </div>

    <script>
        const zone = 'SGR03';
        const apiUrl = `https://api.waktusolat.app/zones/${zone}`;

        async function fetchWaktuSolat() {
            try {
                const response = await fetch(apiUrl);
                const data = await response.json();
                
                // Kemaskini Info Header
                document.getElementById('zone-name').innerText = `Zon: ${data.zone} (Kuala Langat, Sepang)`;
                
                const today = new Date();
                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                document.getElementById('current-date').innerText = today.toLocaleDateString('ms-MY', options);

                // Ambil data hari ini (index 0 jika API return array harian)
                // Nota: Bergantung pada struktur API, kita ambil 'prayers'
                const prayers = data.prayers[0]; 
                
                displayPrayers(prayers);
            } catch (error) {
                console.error("Gagal mengambil data:", error);
                document.getElementById('solat-list').innerHTML = `<div class="glass p-6 rounded-2xl text-red-400">Gagal memuatkan data. Sila cuba lagi.</div>`;
            }
        }

        function displayPrayers(prayers) {
            const solatNames = {
                fajr: "Subuh",
                syuruk: "Syuruk",
                dhuhr: "Zuhur",
                asr: "Asar",
                maghrib: "Maghrib",
                isha: "Isyak"
            };

            const solatIcons = {
                fajr: "fa-cloud-sun",
                syuruk: "fa-sun",
                dhuhr: "fa-certificate",
                asr: "fa-clover",
                maghrib: "fa-moon",
                isha: "fa-star-and-crescent"
            };

            const container = document.getElementById('solat-list');
            container.innerHTML = '';

            const now = new Date();
            const currentTime = now.getHours() * 3600 + now.getMinutes() * 60;
            let nextFound = false;

            Object.keys(solatNames).forEach(key => {
                const timeStamp = prayers[key]; // Format epoch dari API
                const date = new Date(timeStamp * 1000);
                const timeString = date.toLocaleTimeString('ms-MY', { hour: '2-digit', minute: '2-digit', hour12: true });
                
                const prayerSeconds = date.getHours() * 3600 + date.getMinutes() * 60;
                let isActive = false;

                // Logik Highlight Waktu Seterusnya
                if (!nextFound && prayerSeconds > currentTime) {
                    isActive = true;
                    nextFound = true;
                }

                const card = `
                    <div class="glass p-4 rounded-2xl flex items-center justify-between transition-all duration-300 ${isActive ? 'active-solat shadow-lg shadow-blue-500/20' : ''}">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 flex items-center justify-center rounded-full ${isActive ? 'bg-white/20' : 'bg-blue-500/10'}">
                                <i class="fas ${solatIcons[key]} ${isActive ? 'text-white' : 'text-blue-400'}"></i>
                            </div>
                            <div>
                                <p class="font-semibold ${isActive ? 'text-white' : 'text-gray-200'}">${solatNames[key]}</p>
                                ${isActive ? '<span class="text-[10px] bg-white/20 px-2 py-0.5 rounded-full text-white">SETERUSNYA</span>' : ''}
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-lg font-bold ${isActive ? 'text-white' : 'text-blue-300'}">${timeString.toUpperCase()}</p>
                        </div>
                    </div>
                `;
                container.innerHTML += card;
            });
        }

        fetchWaktuSolat();
    </script>
</body>
</html>
